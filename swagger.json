{
    "paths": {
      "/assessments/{id}/clone": {
        "post": {
          "summary": "Clone an existing assessment",
          "tags": ["Assessments"],
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": { "type": "string" },
              "description": "The ID of the assessment to clone"
            },
            {
              "name": "userId",
              "in": "query",
              "required": true,
              "schema": { "type": "string" },
              "description": "The ID of the user who will own the cloned assessment"
            }
          ],
          "responses": {
            "200": {
              "description": "Cloned assessment created successfully",
              "content": {
                "application/json": {
                  "schema": { "$ref": "#/components/schemas/Assessment" }
                }
              }
            },
            "404": { "description": "Original assessment not found" },
            "500": { "description": "Server error" }
          }
        }
      }
    }
  }
  