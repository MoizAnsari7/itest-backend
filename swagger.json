{
    "components": {
      "schemas": {
        "QuestionType": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["mcq_four", "mcq_two", "true_false", "fill_in_the_blank"]
            },
            "description": {
              "type": "string"
            },
            "createdBy": {
              "type": "string",
              "description": "User ID of the creator"
            }
          }
        },
        "Question": {
          "type": "object",
          "properties": {
            "questionText": { "type": "string" },
            "questionType": { "type": "string" },
            "createdBy": {
              "type": "string",
              "description": "User ID of the creator"
            },
            "options": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/Option"
              }
            }
          }
        },
        "Option": {
          "type": "object",
          "properties": {
            "content": { "type": "string" },
            "type": { "type": "string", "enum": ["text", "image", "audio"] },
            "isRightAnswer": { "type": "boolean" },
            "createdBy": {
              "type": "string",
              "description": "User ID of the creator"
            }
          }
        }
      }
    }
  }
  